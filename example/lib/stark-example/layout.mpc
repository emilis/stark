--- requirements ---------------------------------------------------------------

layout:             html5
showSource:         show-source
theme

--- jst ------------------------------------------------------------------------

<div class="layout">
    <h1><%- page.yaml.title %></h1>
    <%= content %>
    <div id="page-source">
        <%= showSource({
            label:      "Show source for this page",
            component:  page,
            }) %>
    </div>
</div>

--- less -----------------------------------------------------------------------

.layout {

    padding:        2em;

    > h1:first-child {
        margin-top: 0;
    }
}
